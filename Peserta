public class Peserta {
    private String id;
    private String nama;
    private String psnId;
    private String rank;
    private int jumlahMenang;

    public Peserta(String id, String nama, String psnId, String rank) {
        this.id = id;
        this.nama = nama;
        this.psnId = psnId;
        this.rank = rank;
        this.jumlahMenang = 0;
    }

    // ENKAPSULASI: Getter methods
    public String getId() { return id; }
    public String getNama() { return nama; }
    public String getPsnId() { return psnId; }
    public String getRank() { return rank; }
    public int getJumlahMenang() { return jumlahMenang; }

    // ENKAPSULASI: Setter methods
    public void setNama(String nama) { this.nama = nama; }
    public void setPsnId(String psnId) { this.psnId = psnId; }
    public void setRank(String rank) { this.rank = rank; }

    public void tambahKemenangan() {
        jumlahMenang++;
    }

    public void tampilkanInfo() {
        System.out.println("ID      : " + id);
        System.out.println("Nama    : " + nama);
        System.out.println("PSN ID  : " + psnId);
        System.out.println("Rank    : " + rank);
        System.out.println("Menang  : " + jumlahMenang);
        System.out.println("-------------------------");
    }
}
